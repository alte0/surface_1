.athlets
	position relative
.athlets:before
	position absolute
	content ''
	top 80px
	left 48%
	background-repeat no-repeat
	width 213px
	height 281px
	background-image url('../img/footballer-mobile.png')
	z-index 1
	@media (max-width 767px)
		transform translateX(-50%)
	@media (min-width 768px)
		top 73px
		left -21%
		width 497px
		height 720px
		background-image url('../img/footballer-tablet.png')
	@media (min-width 960px)
		left -17%
	@media (min-width 1561px)
		top 45px
		left 16%
		width 695px
		height 950px
		background-image url('../img/footballer-desktop.png')
	
.wrap-section-title
	margin-bottom 220px
	@media (min-width 768px)
		margin-bottom 0px
	
.athlets .wrap-section-title
.athlets .feature-column
	@media (min-width 768px)
		padding-left 36%
	@media (min-width 1561px)
		padding-left 60%
.wrap-section-title
	@media (min-width 768px)
		padding-top 72px
	@media (min-width 1561px)
		padding-top 102px
		margin-bottom 18px

.section-title
	color #e7e7e7
	font-size 47px
	line-height 86px
	@media (min-width 768px)
		font-size 85px
		line-height 85px
		
.section-title
.feature-column__title
	text-transform uppercase
	margin 0
	
.wrap-feature-column
	&--darkish-white
		background-color rgba(0, 0, 0, .06)
		.feature-column
			@media (min-width 768px)
				padding-top 36px
				padding-bottom 34px
			@media (min-width 1561px)
				padding-top 59px
				padding-bottom 60px
	&--purple
		background-color #5e3db3
		.feature-column
			padding-top 88px
			padding-bottom 100px
			@media (min-width 768px)
				padding-top 36px
				padding-bottom 31px
			@media (min-width 1561px)
				padding-top 87px
				padding-bottom 100px
		
.feature-column
	padding-top 58px
	padding-bottom 60px
	@media (min-width 768px)
		padding-top 43px
		padding-bottom 41px
	@media (min-width 1561px)
		padding-top 60px
		padding-bottom 58px
	&__title
		color #c1c1c1
		margin-bottom 18px
		font-size 28px
		line-height 35px
		@media (min-width 768px)
			font-size 36px
			line-height 36px
	&__text
		margin 0
		@media (min-width 768px)
			font-size 20px
			line-height 28px
			
.slick-dots
	text-align center
	position absolute
	content ""
	bottom 0
	left 0
	right 0
	padding 0
	& li
		display inline-block
		background-color #c1c1c1
		border-radius 50%
		width 10px
		height 10px
		margin-right 12px
		cursor pointer
		&:last-child
			margin-right 0px
	& li.slick-active
		background-color #5c37b2
		
			
	& button
		display none
.slick-slider .feature-column
	padding-top 73px
	padding-bottom 67px