.btn-download-app
	color: white
	text-decoration: none
	text-transform: uppercase
	font-size: 8px
	line-height: 10px
	display inline-block
	// width: 142px
	padding: 10px 19px 9px 45px
	background-color: $btn-download-app-color
	border-radius 20px
	box-shadow: 0 10px 16px 0 #0a0d35
	&__apple 
		margin-left -15px
		margin-right 8px
		position: relative
		@media (min-width 768px)
			margin-right 31px
			margin-left 0px
		@media (min-width 1561px)
			margin-right 50px
		&:before
			position absolute
			content ''
			top 0
			bottom 0
			left 20px
			margin auto
			background: url("../img/sprite.png") 0 0;
			width: 15px;
			height: 17px;
			@media (min-width 768px)
				background: url("../img/sprite.png") 0 -17px;
				width: 33px;
				height: 37px;
				left 43px
	&__google
		margin-right -15px
		padding-left 55px
		padding-right 34px
		position: relative
			
		&:before
			position absolute
			content ''
			top 0
			bottom 0
			left 30px
			margin auto
			background: url("../img/sprite.png") 0 -314px;
			width: 16px
			height: 18px
			@media (min-width 768px)
				background: url("../img/sprite.png") 0 -332px;
				width: 36px
				height: 39px
				left 63px
				
	@media (min-width 768px)
		padding: 24px 70px 21px 105px
		font-size: 14px
		line-height: 16px
		border-radius 40px
		box-shadow: 10px 16px 24px 0 #0a0d35
	&__google
		@media (min-width 768px)
			padding-left 126px
			padding-right 85px
			margin-right 0px
	@media (min-width 1561px)
		box-shadow: 0 16px 24px 0 #0a0d35

.wraper-buttons
	display: flex
	flex-direction: row
	justify-content: center
	margin-bottom 40px
	@media (min-width 768px)
		order: 1
		margin-bottom 91px
	@media (min-width 1561px)
		margin-bottom 110px
	
.main-navigation
	@media (min-width 1561px)
		align-self: flex-end
.list-games
	margin: 0
	padding: 0;
	display: flex
	flex-direction: row
	justify-content: space-around
	flex-wrap: wrap
	margin-bottom 15px
