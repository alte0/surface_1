.page-header
	color: white
	background  url('../img/bg-header-middle-mobile.png') 48% 44% / auto no-repeat,
							url('../img/bg-header.jpg') center top / cover no-repeat $bg-color-header
	padding-top 39px
	@media (min-width 768px)
		padding-top 52px
		background  url('../img/bg-header-middle-tablet.png') 50% 35% / auto no-repeat,
								url('../img/bg-header.jpg') center top / cover no-repeat $bg-color-header
	@media (min-width 1561px)
		background  url('../img/bg-header-middle-tablet.png') 35% 46% / auto no-repeat,
								url('../img/bg-header.jpg') center top / cover no-repeat $bg-color-header
	.container
		display: flex
		flex-direction: column

.logo img 
	display block
@media (min-width 768px)
	.logo
		margin-left: -13px;
@media (min-width 1561px)
	.logo
			margin-left: 0px;
.header-top
	display: flex
	flex-direction: row
	justify-content: center
	margin-bottom 134px
