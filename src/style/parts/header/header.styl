.page-header
	color: white
	background $bg-color-header url('../img/bg-header.jpg') center top no-repeat
	background-size cover
	padding-top 39px
	@media (min-width 768px)
		padding-top 54px
		// background-size contain
	.container
		display: flex
		flex-direction: column

.header-top
	display: flex
	flex-direction: row
	justify-content: center
	margin-bottom 135px
	@media (min-width 768px)
		justify-content: space-between
		
.comment
	display: none
	@media (min-width 768px)
		display: block

.header-middle
	max-width: 330px
	// margin: 0 auto
	margin-bottom 111px
	@media (min-width 768px)
		max-width: 600px
	@media (min-width 1024px)
		max-width: 100%
	&__text
		margin: 0px
		font-size: 32px
		line-height: 47px
		text-transform: uppercase
		@media (min-width 768px)
			font-size: 64px
			line-height: 81px
		&:first-child
			transform: translateX(-9px)
		&:last-child
			// transform: translateX(48px)

.wraper-buttons
	display: flex
	flex-direction: row
	justify-content: center
	margin-bottom 45px
	
.btn-download-app
	color: white
	text-decoration: none
	text-transform: uppercase
	font-size: 8px
	line-height: 10px;
	padding: 11px 17px 10px 40px
	background-color: $btn-download-app-color
	border-radius 20px
	&__apple 
		margin-right 8px
		position: relative
		&:before
			position absolute
			content ''
			top 0
			bottom 0
			left 15px
			margin auto
			background: url("../img/sprite.png") 0 0;
			width: 15px;
			height: 17px;
			@media (min-width 768px)
				background: url("../img/sprite.png") 0 -17px;
				width: 33px;
				height: 37px;
			
	&__google
		padding-left 49px
		padding-right 30px
		position: relative
		&:before
			position absolute
			content ''
			top 0
			bottom 0
			left 20px
			margin auto
			background: url("../img/sprite.png") 0 -314px;
			width: 16px
			height: 18px
			@media (min-width 768px)
				background: url("../img/sprite.png") 0 -332px;
				width: 36px
				height: 39px
	
.list-games
	margin: 0
	padding: 0;
	display: flex
	flex-direction: row
	justify-content: space-around
	flex-wrap: wrap
	margin-bottom 20px
	@media (min-width 768px)
		// justify-content: space-between
		flex-wrap: nowrap
	
.item-game
	list-style: none
	flex-basis: 30%
	text-align: center
	&:nth-child(4)
	&:nth-child(5)
		flex-grow: 2
	.link
		color: $color-item-game
		text-decoration: none
		text-transform: uppercase
		font-size: 12px
		line-height: 18px;